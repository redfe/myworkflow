generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model UserWork {
  id                    Int          @id @default(autoincrement())
  userId                String
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  inputWorkElement      WorkElement? @relation("InputWork", fields: [inputWorkElementId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  inputWorkElementId    Int?
  inputWorkInformation  String?
  workDescription       String?
  outputWorkElement     WorkElement? @relation("OutputWork", fields: [outputWorkElementId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  outputWorkElementId   Int?
  outputWorkInformation String?
}

model WorkElement {
  id              Int        @id @default(autoincrement())
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  workElementName String     @unique
  inputWorks      UserWork[] @relation("InputWork")
  outputWorks     UserWork[] @relation("OutputWork")
}
